{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <style>
        body {
            background: #e2e1e0;
            text-align: center;
            font-family: Arial;
        }

        .card {
            background: #fff;
            border-radius: 2px;
            display: inline-block;
            height: 300px;
            margin: 1rem;
            position: relative;
            width: 300px;
        }

        .card-4 {
            box-shadow: 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22);
        }

        .titre,
        .synopsis,
        .type,
        .date {
            padding: 40px 10px;
        }

    </style>

    <div class="example-wrapper">
        {% for video in videos %}


            <div class="card card-4">
                <div class="titre">Titre : {{ video.nom }}</div>
                <div class="synopsis">Synopsis : {{ video.synopsis }}</div>
                <div class="type">Type : {{ video.type }}</div>
{#                <div class="date">Date : {{ video.date }}</div>#}
            </div>


        {% endfor %}
    </div>
{% endblock %}

